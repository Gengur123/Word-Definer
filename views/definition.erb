<h1><%= @definition.inputdef %></h1>
<h2><%= @definition.word.inputdef %></h2>

<form action="/words/<%= @definition.word.id() %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Redefine word</label>
  <input id="redefine" name="redefine" type="text" required>

  <button type="submit">Change Definition</button>
</form>

<form action="/words/<%= @definition.word.id() %>/definitions/<%= @definition.id %>" method="post">
  <input type="hidden" name="_method" value="delete" required>

  <button type="submit">Delete Definition!</button>
</form>

<a href="/words/<%= @definition.word.id %>">Back to <%= @definition.word.inputdef %></a>

<p><a href="/words">Return to the dictionary!</a></p>